// ======================================
// DATASOURCE & GENERATOR
// ======================================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ======================================
// ENUMS
// ======================================
enum Gender {
  Male
  Female
  Other
}

enum Role {
  Admin
  User
  Guest
  Developer
  Banned
  VIP @map("V.I.P")
}

// ======================================
// USERS MODEL
// ======================================
model User {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  name      String
  surname   String
  password  String
  gender    Gender
  email     String   @unique
  age       Int
  role      Role     @default(User)
  balance   Int      @default(0)
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @default(now()) @updatedAt @map("updatedAt")

  offers Offer[]

  @@map("users")
}

// ======================================
// OFFERS MODEL
// ======================================
model Offer {
  id          Int     @id @default(autoincrement())
  uid         Int
  name        String
  description String?
  price       Int
  value       Int

  user User @relation(fields: [uid], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([uid])
  @@map("offers")
}
